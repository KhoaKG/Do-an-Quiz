extends ../../layouts/default.pug
include ../../mixins/table-tree-order-management.pug

block main
    if(role.permissions.includes("order-management_view"))
        .card.mb-3
            .card-header Quản lý đơn hàng
                .card-body 
                    table(
                        class="table table-hover table-sm"
                        checkbox-multi
                        )
                        thead
                            tr
                                th
                                    input(type="checkbox" name="checkall")
                                th STT
                                th Mã đơn hàng
                                th Trạng thái
                                th Người phê duyệt
                                th Hành động
                                th Xác nhận
                        tbody 
                            +table-tree-order(orders)
        form(action=""
            method="POST"
            id="form-change-status"
            data-path=`${prefixAdmin}/order-management/change-status`
        ) 

        form(action=""
            method="POST"
            id="form-delete-status"
            data-path=`${prefixAdmin}/order-management/delete`
        ) 