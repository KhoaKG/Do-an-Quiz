mixin alert-success()
    - if(messages.success)
        .message.success
            div(
                class="alert alert-success"
                data-time="5000"
                show-alert
            ) #{messages.success} <span close-alert>X</span>

mixin alert-error()
    - if(messages.error)
        .message.error
            div(
                class="alert alert-danger"
                data-time="5000"
                show-alert
            ) #{messages.error} <span close-alert>X</span>

