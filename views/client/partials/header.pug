include ../mixins/sub-menu.pug
header.header 
  .container
    .row.align-items-center
      .col-3 
        .inner-logo
          a(href="/")
            img(src="/img/logo.svg" alt="logo")
      .col-9 
        .inner-menu
          ul
            li
              a(href="/") Trang chủ
            li(class="sub-menu")
              - const pathProduct = "/products"
              a(href= pathProduct) Sản phẩm
              +sub-menu(layoutProductsCategory, pathProduct)
            li(class="sub-menu")
              - const pathBlog = "/blogs"
              a(href= pathBlog) Tin tức
              +sub-menu(layoutBlogsCategory, pathBlog)

