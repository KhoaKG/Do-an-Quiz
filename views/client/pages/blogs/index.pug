extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug
block main 
  .container.my-3
        .row 
            .col-12 
                +box-head(pageTitle)
        .row
            each item in blogs
                .col-4.mb-3 
                    .product-item
                        .inner-image
                            img(src=item.thumbnail, alt=item.title)
                            if(item.featured == "1")
                                .inner-featured Nổi bật
                        .inner-content
                            h3.inner-title 
                                a(href=`/blogs/detail/${item.slug}`) #{item.title}
        

